{
  "name": "meshguard",
  "version": "0.1.2",
  "description": "MeshGuard SDK â€” AI agent governance for TypeScript & JavaScript",
  "author": "MeshGuard <hello@meshguard.app>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./langchain": {
      "import": {
        "types": "./dist/esm/langchain.d.ts",
        "default": "./dist/esm/langchain.js"
      },
      "require": {
        "types": "./dist/cjs/langchain.d.ts",
        "default": "./dist/cjs/langchain.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build": "npm run build:esm && npm run build:cjs && node scripts/fix-cjs.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "meshguard",
    "ai",
    "agent",
    "governance",
    "policy",
    "langchain",
    "llm",
    "security",
    "guardrails"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/meshguard/meshguard-js.git"
  },
  "homepage": "https://meshguard.app",
  "bugs": {
    "url": "https://github.com/meshguard/meshguard-js/issues"
  }
}
